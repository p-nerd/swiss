---
import Layout from "@/components/layouts/Layout.astro";

import { TextCaseConverterComponent } from "@/components/screens/text-case-converter";
import { LogoIcon } from "@/components/icons/logo-icon";
import { FileTextIcon } from "lucide-react";

const title = "Text Case Converter";

const description =
    "Convert text between different cases: uppercase, lowercase, title case, camelCase, and more. " +
    "Free online text transformation tool with additional text statistics.";

const keywords = [
    "text case converter",
    "uppercase converter",
    "lowercase converter",
    "title case",
    "camel case",
    "pascal case",
    "snake case",
    "kebab case",
    "text transformer",
    "text formatter",
    "case changer",
    "text utility",
    "online text tool",
    "swiss"
];
---

<Layout title={title} description={description} keywords={keywords}>
    <div class="flex flex-col items-center">
        <section class="from-background to-muted w-full bg-gradient-to-b py-12 md:py-24 lg:py-32">
            <div class="container mx-auto px-4 md:px-6">
                <div class="flex flex-col items-center space-y-6 text-center">
                    <a href="/">
                        <LogoIcon />
                    </a>
                    <div class="flex items-center space-x-2">
                        <FileTextIcon className="size-16 text-blue-500 dark:text-blue-400" />
                        <h1
                            class="text-foreground text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl lg:text-6xl"
                        >
                            {title}
                        </h1>
                    </div>
                    <p class="text-muted-foreground mx-auto max-w-[700px] md:text-xl">
                        {description}
                    </p>
                </div>
            </div>
        </section>
        <section class="w-full py-12 md:py-24">
            <div class="container mx-auto px-4 md:px-6">
                <TextCaseConverterComponent client:load />
            </div>
        </section>
    </div>
</Layout>
