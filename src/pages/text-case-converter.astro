---
import Layout from "@/components/layouts/Layout.astro";
import Hero from "@/components/elements/Hero.astro";

import { TextCaseConverterComponent } from "@/components/screens/text-case-converter";

const title = "Text Case Converter";

const description =
    "Convert text between different cases: uppercase, lowercase, title case, camelCase, and more. " +
    "Free online text transformation tool with additional text statistics.";

const keywords = [
    "text case converter",
    "uppercase converter",
    "lowercase converter",
    "title case",
    "camel case",
    "pascal case",
    "snake case",
    "kebab case",
    "text transformer",
    "text formatter",
    "case changer",
    "text utility",
    "online text tool",
    "swiss"
];
---

<Layout title={title} description={description} keywords={keywords}>
    <div class="flex flex-col items-center">
        <Hero title={title} description={description} />
        <section class="w-full py-12 md:py-24">
            <div class="container mx-auto px-4 md:px-6">
                <TextCaseConverterComponent client:load />
            </div>
        </section>
    </div>
</Layout>
