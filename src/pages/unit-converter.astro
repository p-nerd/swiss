---
import Layout from "@/components/layouts/Layout.astro";

import { UnitConverterComponent } from "@/components/screens/unit-converter";
import { LogoIcon } from "@/components/icons/logo-icon";
import { CalculatorIcon } from "lucide-react";

const title = "Unit Converter";

const description =
    "Quickly and accurately convert between different units of measurement for length, weight, volume, temperature, time, and more. " +
    "Free online unit conversion tool with support for multiple measurement systems.";

const keywords = [
    "unit converter",
    "measurement converter",
    "length converter",
    "weight converter",
    "volume converter",
    "temperature converter",
    "time converter",
    "speed converter",
    "data size converter",
    "metric conversion",
    "imperial conversion",
    "conversion calculator",
    "measurement tool",
    "online converter",
    "swiss"
];
---

<Layout title={title} description={description} keywords={keywords}>
    <div class="flex flex-col items-center">
        <section class="from-background to-muted w-full bg-gradient-to-b py-12 md:py-24 lg:py-32">
            <div class="container mx-auto px-4 md:px-6">
                <div class="flex flex-col items-center space-y-6 text-center">
                    <a href="/">
                        <LogoIcon />
                    </a>
                    <div class="flex items-center space-x-2">
                        <CalculatorIcon className="size-16 text-green-500 dark:text-green-400" />
                        <h1
                            class="text-foreground text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl lg:text-6xl"
                        >
                            {title}
                        </h1>
                    </div>
                    <p class="text-muted-foreground mx-auto max-w-[700px] md:text-xl">
                        {description}
                    </p>
                </div>
            </div>
        </section>
        <section class="w-full py-12 md:py-24">
            <div class="container mx-auto px-4 md:px-6">
                <div class="mx-auto w-full max-w-4xl">
                    <UnitConverterComponent client:load />
                </div>
            </div>
        </section>
    </div>
</Layout>
