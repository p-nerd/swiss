---
import { getToolData } from "@/lib/tools";

import { UnitConverterComponent } from "@/components/screens/unit-converter";

import Layout from "@/components/layouts/Layout.astro";
import Hero from "@/components/elements/Hero.astro";
import Shell from "@/components/elements/Shell.astro";

const data = getToolData(Astro.originPathname);

const description = `${data.desc} ${data.descMore}`;
---

<Layout title={data.title} description={description} keywords={data.keywords}>
    <Hero
        title={data.title}
        description={description}
        patternColor="currentColor"
        icon={data.icon}
        iconClass={data.iconClass}
    />
    <Shell>
        <div class="mx-auto w-full max-w-4xl">
            <UnitConverterComponent client:load />
        </div>
    </Shell>
</Layout>
