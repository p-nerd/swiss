---
import { UnitConverterComponent } from "@/components/screens/unit-converter";

import Layout from "@/components/layouts/Layout.astro";
import Hero from "@/components/elements/Hero.astro";
import Shell from "@/components/elements/Shell.astro";

const title = "Unit Converter";

const description =
    "Quickly and accurately convert between different units of measurement for length, weight, volume, temperature, time, and more. " +
    "Free online unit conversion tool with support for multiple measurement systems.";

const keywords = [
    "unit converter",
    "measurement converter",
    "length converter",
    "weight converter",
    "volume converter",
    "temperature converter",
    "time converter",
    "speed converter",
    "data size converter",
    "metric conversion",
    "imperial conversion",
    "conversion calculator",
    "measurement tool",
    "online converter",
    "swiss"
];
---

<Layout title={title} description={description} keywords={keywords}>
    <Hero title={title} description={description} patternColor="currentColor" />
    <Shell>
        <div class="mx-auto w-full max-w-4xl">
            <UnitConverterComponent client:load />
        </div>
    </Shell>
</Layout>
