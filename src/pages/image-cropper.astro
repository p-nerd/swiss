---
import Layout from "@/components/layouts/Layout.astro";

import { ImageCropperComponent } from "@/components/screens/image-cropper";
import { LogoIcon } from "@/components/icons/logo-icon";
import { CropIcon } from "lucide-react";

const title = "Image Cropper";

const description =
    "Easily crop, resize, and edit your images online with our free image cropper tool. " +
    "Adjust aspect ratios, zoom, rotate, and download in multiple formats without losing quality.";

const keywords = [
    "image cropper",
    "photo editor",
    "crop image",
    "resize image",
    "image editor",
    "aspect ratio",
    "rotate image",
    "online image tool",
    "free image cropper",
    "image trimmer",
    "picture cropper",
    "crop and save",
    "image manipulation",
    "web image editor",
    "swiss"
];
---

<Layout title={title} description={description} keywords={keywords}>
    <div class="flex flex-col items-center">
        <section class="from-background to-muted w-full bg-gradient-to-b py-12 md:py-24 lg:py-32">
            <div class="container mx-auto px-4 md:px-6">
                <div class="flex flex-col items-center space-y-6 text-center">
                    <a href="/">
                        <LogoIcon />
                    </a>
                    <div class="flex items-center space-x-2">
                        <CropIcon className="size-16 text-purple-500 dark:text-purple-400" />
                        <h1
                            class="text-foreground text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl lg:text-6xl"
                        >
                            {title}
                        </h1>
                    </div>
                    <p class="text-muted-foreground mx-auto max-w-[700px] md:text-xl">
                        {description}
                    </p>
                </div>
            </div>
        </section>
        <section class="w-full py-12 md:py-24">
            <div class="container mx-auto px-4 md:px-6">
                <div class="mx-auto w-full max-w-5xl">
                    <ImageCropperComponent client:load />
                </div>
            </div>
        </section>
    </div>
</Layout>
