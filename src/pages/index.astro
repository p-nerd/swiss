---
import Layout from "@/components/layouts/Layout.astro";

import { cn } from "@/lib/utils";

import { LogoIcon } from "@/components/icons/logo-icon";
import { ArrowRightIcon, KeyIcon, FileTextIcon, CalculatorIcon } from "lucide-react";

const tools = [
    {
        icon: KeyIcon,
        iconClass: "text-red-500 dark:text-red-400",
        title: "Password Generator",
        desc: "Generate strong, secure passwords with customizable length, character types, and advanced options for maximum online security.",
        href: "/password-generator"
    },
    {
        icon: FileTextIcon,
        iconClass: "text-blue-500 dark:text-blue-400",
        title: "Text Case Converter",
        desc: "Instantly convert text between different cases: lowercase, UPPERCASE, Title Case, camelCase, snake_case, and more.",
        href: "/text-case-converter"
    },
    {
        icon: CalculatorIcon,
        iconClass: "text-green-500 dark:text-green-400",
        title: "Unit Converter",
        desc: "Quickly and accurately convert between different units of measurement for length, weight, volume, temperature, time, and more.",
        href: "/unit-converter"
    }
];

const title = "Your Digital Swiss Army Knife";

const description =
    "A versatile collection of web tools designed to simplify your digital life " +
    "and help you with everyday tasks. Powerful, user-friendly, and " +
    "privacy-focused â€” all in one place, all for free, with no sign-up required.";

const keywords = ["swiss", "web toolkit", "digital swiss army knife", "shihab mahamud"];
---

<Layout title={title} description={description} keywords={keywords}>
    <div class="flex flex-col items-center">
        <section class="from-background to-muted w-full bg-gradient-to-b py-12 md:py-24 lg:py-32">
            <div class="container mx-auto px-4 md:px-6">
                <div class="flex flex-col items-center space-y-6 text-center">
                    <a href="/">
                        <LogoIcon />
                    </a>
                    <h1
                        class="text-foreground text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl lg:text-6xl"
                    >
                        Your Digital Swiss Army Knife
                    </h1>
                    <p class="text-muted-foreground mx-auto max-w-[700px] md:text-xl">
                        {description}
                    </p>
                    <a
                        href="#tools"
                        class="bg-primary hover:bg-primary/90 focus:ring-primary text-primary-foreground inline-flex items-center justify-center rounded-md px-6 py-3 text-lg font-medium shadow focus:ring-2 focus:ring-offset-2 focus:outline-none"
                    >
                        Explore Tools
                        <ArrowRightIcon className="ml-2 h-4 w-4" />
                    </a>
                </div>
            </div>
        </section>
        <section id="tools" class="w-full py-12 md:py-24">
            <div class="container mx-auto px-4 md:px-6">
                <div class="mb-8 text-center">
                    <h2 class="text-foreground text-3xl font-bold tracking-tighter md:text-4xl">
                        Tools
                    </h2>
                    <p class="text-muted-foreground mx-auto mt-3 max-w-[700px] md:text-xl">
                        Discover our most powerful and versatile tools to boost your productivity.
                    </p>
                </div>
                <div class="mx-auto grid gap-6 py-8 md:grid-cols-2 lg:grid-cols-3">
                    {
                        tools.map(({ icon: Icon, ...tool }) => (
                            <a href={tool.href}>
                                <div class="bg-card text-card-foreground border-border rounded-md border p-6 shadow-2xs transition-all hover:shadow-xs">
                                    <div class="mb-2 flex items-center gap-2">
                                        <Icon className={cn("size-8", tool.iconClass)} />
                                        <h3 class="text-foreground text-lg font-semibold">
                                            {tool.title}
                                        </h3>
                                    </div>
                                    <p class="text-muted-foreground text-sm">{tool.desc}</p>
                                </div>
                            </a>
                        ))
                    }
                </div>
            </div>
        </section>
    </div>
</Layout>
