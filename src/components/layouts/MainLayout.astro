---
import "@/styles/global.css";

interface Props {
    title: string;
    description: string;
    keywords: string[];
}

const { title, description, keywords } = Astro.props as Props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <meta name="author" content="Shihab Mahamud" />
        <title>{title} - Swiss</title>
        <meta name="description" content={description} />
        <meta name="keywords" content={keywords.join(", ")} />
    </head>
    <body class="bg-background min-h-screen scroll-smooth font-sans antialiased">
        <div class="relative flex min-h-screen flex-col">
            <main class="flex-1">
                <slot />
            </main>
            <footer class="bg-background border-t">
                <div class="container mx-auto py-8 md:py-12">
                    <p class="text-center">
                        &copy; {new Date().getFullYear()}{" "}
                        <a
                            target="_blank"
                            href="https://developershihab.com"
                            class="hover:underline hover:underline-offset-2"
                        >
                            Shihab Mahamud
                        </a>
                        . All rights reserved.
                    </p>
                </div>
            </footer>
        </div>
    </body>
</html>
